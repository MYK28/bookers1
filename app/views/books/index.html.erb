   <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to"Show", "/books/#{book.id}" %>
            <%= link_to"Edit", edit_book_path(book.id) %>
            <%= link_to"Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
   <h2>New book</h2>
   <% if @book.errors.any? %>
   <% book_errors = @book.errors.count %>
   <% if book_errors == 1 %>
   <%= @book.errors.count %> error prohibited this book from being saved:
   <% else %>
   <%= @book.errors.count %> errors prohibited this book from being saved:
   <% end %>
   <p><% @book.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
   <% end %>


   <%= form_with model:@book, url:'/books', local:true do |f| %>
   <div class = "field">
   <p>Title</p>
   <%= f.text_field :title %>
   </div>
   <div class = "filed">
   <p>Body</p>
   <%= f.text_area :body %>
   </div>
   <div class = "action"><%= f.submit'Create Book' %></div>
   <% end %>
